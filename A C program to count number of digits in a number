/*A C program to count number of digits in a number.
Author : Utkarsh Chuahan */
#include <stdio.h>
 
int main()
{
     long int n;
     int c=0;
     printf("Enter The Integer:");
     scanf("%ld",&n);
     while(n!=0)
     {
         n/=10;
         c++;
     }
     printf("Number of Digits: %d",c);
    return 0;
}
